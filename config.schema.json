{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "platform": {
      "type": "string",
      "enum": ["GiraHomeServer"],
      "default": "GiraHomeServer",
      "description": "Name der Plattform (z. B. GiraHomeServer)"
    },
    "host": {
      "type": "string",
      "default": "192.168.1.100",
      "description": "IP-Adresse oder Hostname des Gira HomeServers"
    },
    "username": {
      "type": "string",
      "default": "admin",
      "description": "Benutzername für die Verbindung zum Gira HomeServer"
    },
    "password": {
      "type": "string",
      "default": "password",
      "description": "Passwort für die Verbindung zum Gira HomeServer"
    }
  },
  "required": ["platform"]
}
