{
  "type": "object",
  "properties": {
    "pluginAlias": {
      "type": "string",
      "enum": ["homebridge-gira-homeserver"]
    },
    "pluginType": {
      "type": "string",
      "enum": ["platform"]
    },
    "singular": {
      "type": "boolean",
      "default": true
    },
    "schema": {
      "type": "object",
      "properties": {
        "host": {
          "title": "Gira HomeServer Host",
          "type": "string",
          "required": true,
          "default": "http://your-gira-homeserver-address"
        },
        "username": {
          "title": "Username",
          "type": "string",
          "required": true
        },
        "password": {
          "title": "Password",
          "type": "string",
          "required": true
        },
        "lights": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Light Name"
              },
              "id": {
                "type": "string",
                "description": "Light ID"
              }
            },
            "required": ["name", "id"]
          },
          "description": "List of lights to control"
        }
      },
      "required": ["host", "username", "password", "lights"]
    }
  },
  "required": ["pluginAlias", "pluginType", "singular", "schema"]
}
